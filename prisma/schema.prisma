// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Menu {
  id         String    @id @default(uuid())
  type       String
  products   Product[]
  created_at DateTime  @default(now())
}

model Product {
  id          String     @id @default(uuid())
  price       Float
  name        String     @unique
  image       String?    @unique
  description String
  category    Category[]
  menu        Menu[]
  created_at  DateTime   @default(now())
}

model Category {
  id         String    @id @default(uuid())
  name       String
  products   Product[]
  created_at DateTime  @default(now())
}
